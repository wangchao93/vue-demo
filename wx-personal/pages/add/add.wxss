/* pages/add/add.wxss */
.add-top,.add-bottom{
  position: relative;
  display: flex;
  flex-direction: column;
  background: #fff;
  width: 100%;
  font-size: 13px;
}
.title-box{
  height: 50px;
  border-bottom:1px solid #f2f2f2; 
  margin-left: 20px;
  align-items: center
}
.title{
  height: 50px;
  
}
.start-time-box,.end-time-box,.all-date-box{
  height: 50px;
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-left: 20px;
  border-bottom: 1px solid #f2f2f2;

}
.start-time,.end-time{
  position: absolute;
  right: 10px;
  display: flex;
  flex-direction: row;
  align-items: center;
  color: #a9a9a9
}
.time-date{
  padding: 0 20px;
}


.is-all-date{
  position: absolute;
  right: 10px;
}
.add-center{
  width: 100%;
  height: 50px;
  margin: 10px 0;
  background: #fff;
  font-size: 13px;
}
.place{
  height: 50px;
  margin-left: 20px;
}

.list-item{
  position: relative;
  display: flex;
  align-items: center;
  padding: 15px;
  -webkit-box-align: center;
  -ms-flex-align: center;
  border-bottom: 1px solid #dadada;
  font-size: 13px;
  margin-left: 20px;
}
.list-item-content{
  position: absolute;
  right: 50px;
  color: #a9a9a9
}
.list-item-img{
 position: absolute;
 right: 10px;
 color: #a9a9a9
}
.preserve{
  width: 80%;
  margin-top: 40px;

}



